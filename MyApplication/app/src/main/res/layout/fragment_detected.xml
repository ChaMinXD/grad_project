<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:background="#194185"
    tools:context=".DetectedFragment">
    <View
        android:id="@+id/url_TextView"
        android:layout_width="309dp"
        android:layout_height="40dp"
        android:background="@drawable/round_shape"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:layout_marginTop="30dp"


        />
    <TextView
        android:id="@+id/url_text"
        android:layout_width="290dp"
        android:layout_height="35dp"
        android:textColor="#194185"
        app:layout_constraintStart_toStartOf="@id/url_TextView"
        app:layout_constraintTop_toTopOf="@+id/url_TextView"
        app:layout_constraintEnd_toEndOf="@id/url_TextView"
        app:layout_constraintBottom_toBottomOf="@id/url_TextView"
        android:textSize="15sp"
        android:textAlignment="center"

        />
    <View
        android:id="@+id/result_TextView"
        android:layout_width="309dp"
        android:layout_height="60dp"
        android:background="@drawable/round_shape"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/url_TextView"
        app:layout_constraintEnd_toEndOf="parent"
        android:layout_marginTop="30dp"

        />
    <androidx.constraintlayout.utils.widget.ImageFilterView
        android:layout_width="30dp"
        android:layout_height="30dp"
        android:id="@+id/result_icon"
        android:background="@drawable/detected_icon"
        android:layout_marginStart="5dp"
        app:layout_constraintTop_toTopOf="@id/result_TextView"
        app:layout_constraintBottom_toBottomOf="@id/result_TextView"
        app:layout_constraintStart_toStartOf="@+id/result_TextView"/>
    <TextView
        android:id="@+id/result_text"
        android:layout_width="260dp"
        android:layout_height="35dp"
        android:textColor="#194185"
        app:layout_constraintStart_toEndOf="@id/result_icon"
        app:layout_constraintTop_toTopOf="@+id/result_TextView"
        app:layout_constraintEnd_toEndOf="@id/result_TextView"
        app:layout_constraintBottom_toBottomOf="@id/result_TextView"
        android:text="바이러스 검출 의심 사이트 "
        android:textSize="20sp"
        android:textAlignment="center"
        />

    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/result_recyclerview"
        android:layout_width="match_parent"
        android:layout_height="500dp"
        android:layout_marginTop="30dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"

        app:layout_constraintTop_toBottomOf="@id/result_TextView" />


</androidx.constraintlayout.widget.ConstraintLayout>