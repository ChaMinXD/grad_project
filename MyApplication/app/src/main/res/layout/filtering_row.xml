<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="400dp"
    android:layout_height="50dp"
    android:layout_marginTop="10dp"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <View
        android:id="@+id/filtering_word_View"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:layout_marginStart="20dp"
        android:layout_marginEnd="10dp"
        android:elevation="20dp"
        android:background="@drawable/round_shape"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent" />

    <TextView
        android:layout_width="300dp"
        android:layout_height="30dp"
        android:textSize="16sp"
        android:text="마약"
        android:paddingStart="10dp"
        android:id="@+id/filtering_word_Text"
        android:textColor="@color/black"
        app:layout_constraintStart_toStartOf="@+id/filtering_word_View"
        app:layout_constraintTop_toTopOf="@id/filtering_word_View"
        app:layout_constraintBottom_toBottomOf="@id/filtering_word_View"
        />
    <TextView
        android:id="@+id/Xbtn"
        android:layout_width="50dp"
        android:layout_height="30dp"
        android:text="X"
        android:textSize="16sp"
        android:gravity="center"
        app:layout_constraintStart_toEndOf="@id/filtering_word_Text"
        app:layout_constraintEnd_toEndOf="@id/filtering_word_View"
        app:layout_constraintTop_toTopOf="@id/filtering_word_View"
        app:layout_constraintBottom_toBottomOf="@id/filtering_word_View"/>
</androidx.constraintlayout.widget.ConstraintLayout>